{
  "name": "offload-project/laravel-invite-only",
  "description": "A Laravel package for managing user invitations with polymorphic relationships, token-based access, scheduled reminders, and event-driven notifications.",
  "keywords": [
    "laravel",
    "invitation",
    "invite",
    "invitations",
    "user-management",
    "team-invites",
    "polymorphic",
    "notifications",
    "reminders"
  ],
  "homepage": "https://github.com/offload-project/laravel-invite-only",
  "license": "MIT",
  "authors": [
    {
      "name": "Offload Project"
    }
  ],
  "require": {
    "php": "^8.2",
    "illuminate/database": "^11.0|^12.0",
    "illuminate/support": "^11.0|^12.0"
  },
  "require-dev": {
    "captainhook/captainhook-phar": "^5.27",
    "larastan/larastan": "^3.8.1",
    "laravel/pint": "^1.26.0",
    "orchestra/testbench": "^9.0|^10.8.0",
    "pestphp/pest": "^3.0|^4.0",
    "pestphp/pest-plugin-laravel": "^3.0|^4.0",
    "ramsey/conventional-commits": "^1.6"
  },
  "autoload": {
    "psr-4": {
      "OffloadProject\\InviteOnly\\": "src/",
      "OffloadProject\\InviteOnly\\Database\\Factories\\": "database/factories/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OffloadProject\\InviteOnly\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "OffloadProject\\InviteOnly\\InviteOnlyServiceProvider"
      ],
      "aliases": {
        "InviteOnly": "OffloadProject\\InviteOnly\\Facades\\InviteOnly"
      }
    }
  },
  "scripts": {
    "test": "pest",
    "test-coverage": "pest --coverage",
    "analyse": "phpstan analyse --memory-limit=-1",
    "analyse-baseline": "phpstan analyse --memory-limit=-1 --generate-baseline",
    "pint": "vendor/bin/pint"
  },
  "config": {
    "allow-plugins": {
      "captainhook/captainhook-phar": true,
      "pestphp/pest-plugin": true
    },
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
